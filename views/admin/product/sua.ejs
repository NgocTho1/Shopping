<% include ../layouts/header.ejs %>

<div class="col-xs-10 col-sm-10 col-md-10 col-lg-10 sua-cate">
    <div class="row">
        <div class="content-header col-lg-5">
            <h3>Sửa product</h3>
        </div>
    </div>
    <div class="row content">
        <% if(success_msg != ''){ %> 
            <div class="alert alert-success"><%= success_msg%></div>
        <% } %>
        <% if(errors) { %>
            <div class="alert alert-danger">
                <% errors.forEach(function(e){ %>

                    <p><%= e.msg %></p>
                <%});%>

            </div>
        <% };%>
        <% if(errPrice != '') {%>
            <div class="alert alert-danger"><%= errPrice %></div>
        <% } %>
        <div class="content-body col-lg-12">
            <div class="description col-lg-6">
                <h3>Thông tin</h3>
                
                <div class="sua-content">
                    <form action="" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputEmail1">Name</label>
                            <input type="name" name="name" value="<%= pro.tittle %>" class="form-control" id="exampleInputEmail1" >
                        </div>
                        <div class="form-group">
                            <label for="exampleInputImg">Hình ảnh</label>
                            <img src="<%= pro.imagePath[0]%>" width="200px" height="200px" alt="">
                            <input type="file" name="file" id="exampleInputImg" >
                            <input type="file" name="file"  id="exampleInputImg" >
                            <input type="file" name="file"  id="exampleInputImg" >
                        </div>
                        <div class="form-group">
                            <label for="exampleInputImg">Giá (VND)</label>
                            <input type="text" name="price" value="<%= pro.price %>"  class="form-control" id="exampleInputImg" >
                        </div>
                        <div class="form-group">
                            <label for="exampleInputImg">Sale Off (VND)</label>
                            <input type="text" name="saleOff" value="<%= pro.saleOff %>"  class="form-control" id="exampleInputImg" >
                        </div>
                        <div class="form-group">
                            <label for="exampleInputImg">Số lượng</label>
                            <input type="name" name="quality" value="<%= pro.qty %>"  class="form-control" id="exampleInputImg" >
                        </div>
                        <div class="form-group">
                            <label for="exampleInputCate">Thể loại</label>                                
                            <select class="form-control" name="cateId" id="exampleInputCate">
                                <% cate.forEach(function(data) {%>
                                    <option value="<%= data._id %>" ><%= data.url %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="description">Chi tiết</label>
                            <textarea id="description" name="description"  class="form-control" rows="4" ><%= pro.description %></textarea>
                            
                            
                        </div>
                        
                        
                        <button class="btn btn-primary">Save</button>
                        <button class="btn btn-danger">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<% include ../layouts/footer.ejs %>
